<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="azizapp.profil.AccountInformation"
             NavigationPage.IconColor="Black"
             NavigationPage.HasNavigationBar="True"
             >

    <StackLayout Padding="20">
        <StackLayout>
            <Label x:Name="nameLabel"
       Text="{Binding NameText} " 
       TextColor="Black"
       FontSize="18"
       Margin="0,10,0,0"/>
        </StackLayout>

        <Label x:Name="creationDateLabel" 
       Text="Date de création de compte: " 
       TextColor="Black"
       FontSize="18"
       Margin="0,10,0,0"/>

        <Label x:Name="postLabel"
       Text="Poste:" 
       TextColor="Black"
       FontSize="18"
       Margin="0,10,0,0"/>

        <Label x:Name="emailLabel"
       Text="Adresse mail: " 
       TextColor="Black"
       FontSize="18"
       Margin="0,10,0,0"/>

    </StackLayout>

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">

            <Label Text="Information de votre compte" 
               TextColor="Black"
               FontSize="22"
               FontAttributes="Bold"
               VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </NavigationPage.TitleView>
</ContentPage>